<?xml version="1.0" encoding="UTF-8" ?>
<container xmlns="http://symfony.com/schema/dic/services"
           xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
           xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <service id="Shopware\Production\Command\SystemInstallCommand">
            <argument type="string">%kernel.project_dir%</argument>
            <tag name="console.command"/>
        </service>

        <service id="Shopware\Production\Command\SystemSetupCommand">
            <tag name="console.command"/>
        </service>

        <service class="League\OAuth2\Server\CryptKey" id="shopware.private_key">
            <argument>%kernel.project_dir%/config/keys/jwt/private.pem</argument>
            <argument>%env(string:JWT_PRIVATE_KEY_PASSPHRASE)%</argument>
        </service>

        <service class="League\OAuth2\Server\CryptKey" id="shopware.public_key">
            <argument>%kernel.project_dir%/config/keys/jwt/public.pem</argument>
        </service>
    </services>
</container>
